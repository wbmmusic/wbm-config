{
  "name": "wbm-config",
  "version": "0.0.59",
  "author": "Marece Williams",
  "description": "App for configuring WBM Tek devices",
  "homepage": "./",
  "main": "public/main.js",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.2",
    "electron-updater": "^4.2.5",
    "foreman": "^3.0.1",
    "jquery": "^3.4.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "react-select": "^3.1.0",
    "serialport": "^8.0.7",
    "usb-detection": "^4.7.0",
    "uuid": "^7.0.2"
  },
  "scripts": {
    "dev": "nf start",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "ebuild": "yarn build && node_modules/.bin/build",
    "package": "electron-builder build -c.extraMetadata.main=build/main.js --publish never",
    "deploy": "electron-builder build -c.extraMetadata.main=build/main.js --publish always",
    "rebuild": "electron-rebuild -f",
    "install": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wbmmusic/wbm-config.git"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "productName": "WBM Config App",
    "appId": "com.reactbits.reactelectron",
    "electronVersion": "8.2.0",
    "copyright": "WBM Tek",
    "extends": null,
    "files": [
      "build/**/*",
      "electron/*"
    ],
    "mac": {
      "gatekeeperAssess": "true",
      "icon": "public/logo.icns",
      "fileAssociations": [
        {
          "ext": "wbmtek",
          "icon": "public/wbmtekicn.icns"
        }
      ]
    },
    "dmg": {
      "icon": "public/dmg.icns"
    },
    "win": {
      "icon": "public/favicon.ico",
      "fileAssociations": [
        {
          "ext": "wbmtek",
          "icon": "public/wbmtekicn.ico"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^8.2.0",
    "electron-builder": "^22.4.1",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.10.1"
  }
}
